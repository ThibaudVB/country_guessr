<!-- Image affichÃ©e -->
<%= image_tag image.url, width: "500" if image %>

<!-- Formulaire de rÃ©ponse -->
<%= form_with url: "/guess", method: :post, id: "guess-form" do |f| %>
  <%= hidden_field_tag :image_id, image.id %>
  <input type="text" name="guessed_country" placeholder="Entrez le pays" required id="country-input">
  <button type="submit">Valider</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<% end %>

<!-- Timer et barre de progression -->
<p id="timer-text">Temps restant : <span id="countdown">20</span> secondes</p>
<div id="progress-container" style="width: 100%; background-color: #ddd; height: 10px; margin: 8px 0;">
  <div id="progress-bar" style="width: 100%; height: 100%; background-color: #4caf50;"></div>
</div>
